{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.promise",
      "es2015.iterable",
      "es2015.proxy",
      "es2016.array.include"
    ],
    "noStrictGenericChecks": true,    
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}